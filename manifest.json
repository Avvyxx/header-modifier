{
  "manifest_version": 2,
  "name": "Header Modifier",
  "version": "1.0",

  "description": "Lets users modify their request headers.",
  "homepage_url": "https://github.com/Avvyxx/header-modifier",

  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
    "open_in_tab": true,
    "page": "options/options.html"
  }
}
